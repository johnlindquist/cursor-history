{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/npm",
    ["@semantic-release/github", {
      "assets": [
        {"path": "dist/**/*.js", "label": "Distribution", "name": "${nextRelease.version}-${path.basename}"},
        {"path": "dist/**/*.d.ts", "label": "TypeScript Declarations", "name": "${nextRelease.version}-${path.basename}"}
      ],
      "successComment": false,
      "failComment": false,
      "failTitle": false,
      "releasedLabels": false
    }]
  ]
} 